{% if render_xml_declaration %}
    <?xml version="1.0" encoding="UTF-8" standalone="no" ?>
{% endif %}
<epcis:EPCISDocument
        xmlns:epcis="urn:epcglobal:epcis:xsd:1"
        xmlns:gs1ushc="http://epcis.gs1us.org/hc/ns"
        {% if header %}
        xmlns:{{ header.namespace }}="{{ header.schema_location }}"
        {% endif %}
        schemaVersion="1.0" creationDate="{{ created_date }}">
    {% block header %}
        {% if header %}
            <EPCISHeader>
                {% include "epcis/sbdh.xml" %}
            </EPCISHeader>
        {% endif %}
    {% endblock %}
    <EPCISBody>
        <EventList>
            {% block events %}
                {% if template_events|length > 0 %}
                    {% for event in template_events %}
                        {% include event.template %}
                    {% endfor %}
                {% endif %}
                {% if transformation_events|length > 0 %}
                    <extension>
                        {% for event in transformation_events %}
                            {% include event.template %}
                        {% endfor %}
                    </extension>
                {% endif %}
            {% endblock %}
        </EventList>
    </EPCISBody>
</epcis:EPCISDocument>
